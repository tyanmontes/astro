---
interface Props{
    url: string;
    name: string;
    isBig?: boolean;
}

const { name, url, isBig = false} = Astro.props;
const id = url.split('/').at(-2);
const imageSrc =` https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png `
---

<a 
    href={`/pokemons/${name}`}
    class:list={[`rounded flex flex-col justify-cenmter items-center p-2`,
        {
            border: !isBig,
        }
    ]}>

    <img
     class:list={[
        {
        'w-26 h-26': isBig, 
        'w-16 h-16': !isBig,
        }
     ]}
     src={imageSrc} alt={name}/>

    <span class="capitalize">#{id} { name }</span>
</a>